const SOURCE_TYPES = [
  { key: "self", label: "–õ–∏—á–Ω–æ –≤–∏–¥–µ–ª(–∞)", factor: 1.15 },
  { key: "neighbors", label: "–°–æ—Å–µ–¥–∏/—Ä–æ–¥–∏—Ç–µ–ª–∏ —Å–æ–æ–±—â–∏–ª–∏", factor: 1.05 },
  { key: "school", label: "–®–∫–æ–ª–∞/—É—á–∏—Ç–µ–ª—è —Å–æ–æ–±—â–∏–ª–∏", factor: 1.1 },
